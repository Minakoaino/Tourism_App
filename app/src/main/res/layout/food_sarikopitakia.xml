<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food_sarikopitakia">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:src="@drawable/sarikopitakia"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/web_search_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/call_icon_image"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/web_search" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textColor="#000"
                android:text="These savory fried cheese pies are named for their spiral shapes. Sariki, a Turkish word meaning “turban,” is also the name of a traditional headdress still worn by Cretan men at celebrations. Tsikoudia, a grape-based spirit from Crete, is used in the dough, likely for making it easier to roll out into thin sheets.  Did someone say fried cheesy pastries? Of course, you are excited! These delicious pastries can be eaten during breakfast, or as a nice pick-me-up snack during the day, or as a dessert topped with honey and cinnamon.  These savory small pies are named for their spiral shapes. Sariki, a Turkish word meaning “turban”. The name is also for a traditional headdress worn by Cretan men during celebrations.  History, culture and deliciousness, all in a bite of Sarikopitakia."
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>





</ScrollView>