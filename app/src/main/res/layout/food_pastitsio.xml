<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Food_pastitsio">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:src="@drawable/pastitsio"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/web_search_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/call_icon_image"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/web_search" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textColor="#000"
                android:text="Pastitsio (Greek: παστίτσιο, pastítsio), sometimes spelled pastichio, is a Greek baked pasta dish with ground meat and béchamel sauce with variations of the dish found in other countries of the Mediterranean Sea.  Pastitsio takes its name from the Italian pasticcio, the oldest written recipe of the dish called &quot;pasticcio&quot; can be found in Pellegrino Artusi's Cookbook «La Scienza in Cucina e L’ Arte di Mangiar Bene» (1891, The Science in Kitchen and the Art of Good Food), with the use of three different kinds of meat (pork, beef and pigeon),[1] and it belongs to a large family of baked savory pies which may be based on meat, fish, or pasta. Many Italian versions include a pastry crust; some include béchamel. "
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>





</ScrollView>