<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food_moussakas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:src="@drawable/moussakas"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/web_search_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/call_icon_image"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/web_search" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textColor="#000"
                android:text="Moussaka (/muːˈsɑːkə/, /ˌmuːsəˈkɑː/ or /ˌmuːsɑːˈkɑː/) is an eggplant- and/or potato-based dish, often including ground meat, which is common in the Balkans and the Middle East, with many local and regional variations.  The best-known version in Europe and the Americas is the Greek variant created in the 1920s by Nikolaos Tselementes. Many versions have a top layer made of milk-based sauce thickened with egg (custard) or flour (béchamel sauce). In Greece, the dish is layered and typically served hot.  This is quite different from the versions that continue to be made in Turkey and the Middle East. In Turkey, mussaka consists of thinly sliced and fried eggplant served in a tomato-based meat sauce, warm or at room temperature. In the Arab countries, it is often eaten cold, but occasionally hot as well."
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>






</ScrollView>