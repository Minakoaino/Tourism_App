<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".i_resort">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:src="@drawable/iresort"
            android:layout_gravity="center_horizontal"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/call_icon_image"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:maxHeight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/phone_call" />

            <ImageView
                android:id="@+id/web_search_image"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/call_icon_image"
                android:src="@drawable/web_search"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"/>

            <ImageView
                android:id="@+id/google_map_search_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/map_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:text="I Resort Beach Hotel and Spa "
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textColor="#000"
                android:text="The gorgeous sea-side vibrant village of Stalis, accommodates our extraordinary world: the I Resort Beach Hotel and Spa, a luxury 227-room hotel sparkling on the sea coast and waiting to be discovered and enjoyed by discerning travelers.  The elegant luxury guests’ rooms in combination with exceptional services and a wide variety of facilities surrounded by a private beach, promise a timeless vacation experience that can be treasured for a lifetime. Located right on the sandy beach of Stalida, the 5-star I- Resort Beach Hotel offers elegantly decorated rooms. It includes a spa center and 2 restaurants.  The air-conditioned rooms of I- Resort Beach Hotel Lounge feature parquet floors and light wood furnishings. They come with a satellite LCD TV, mini-bar and hairdryer. All rooms have balconies, while most of them enjoy Cretan Sea views.  The 2 pools have wooden decks with free sun loungers and umbrellas.  Facilities include 2 restaurants, as well as 2 bars, the main and the pool bar.  I- Resort Beach Hotel is a few minutes’ walk from the center of Stalida. Heraklion airport is at 22 mi. Free private on-site parking is available.  There is no ATM on the property but nearby."
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>



</ScrollView>