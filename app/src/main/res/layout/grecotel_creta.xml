<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".grecotel_creta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/grecotel" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/call_icon_image"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:maxHeight="10dp"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/phone_call" />

            <ImageView
                android:id="@+id/web_search_image"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/call_icon_image"
                android:src="@drawable/web_search"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"/>

            <ImageView
                android:id="@+id/google_map_search_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/map_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:text="Grecotel Creta Palace"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textColor="#000"
                android:text="One of our top picks in Rethymno. Grecotel Creta Palace enjoys a prime location, right by a fine sandy beach and 3.1 mi from the center of Rethymnon. This exclusive 5-star resort features 10 restaurants and bars, 2 outdoor pools. one indoor pool and a private beach area.  The elegant rooms at the Grecotel Creta Palace are air conditioned and have wooded floors. They come with a mini-bar, flat-screen TV comes with satellite channels and mini hi-fi. Bathrobes and slippers are complimentary.  Awarded for its fine cuisine, Grecotel Creta Palace offers no less than 10 food and beverage choices.  Guests can spend relaxed moments in the impressive pool area with outdoor pools, indoor pools and children’s pool with waterslides.  The new sea-front Elixir Spa proposes facial and body treatments from Indian therapists. Features include an indoor pool with jet black mosaics, pool-view gym with state-of-the-art equipment and a hot tub sun patio.  Couples in particular like the location – they rated it 9.2 for a two-person trip.  We speak your language!"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>