<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foods_dakos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:src="@drawable/dakos"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/web_search_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/call_icon_image"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/web_search" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textColor="#000"
                android:text='Dakos or ntakos (Greek: ντάκος), also known as koukouvagia or koukouvayia (κουκουβάγια, "owl") or—in eastern Crete—kouloukopsomo (from koulouki + psomi, pup + bread, allegedly the bread given to puppies), is a Cretan meze consisting of a slice of soaked dried bread or barley rusk (paximadi) topped with chopped tomatoes and crumbled feta or mizithra cheese, and flavored with herbs such as dried oregano. Olives and pepper can also be added. The dish is similar to the Catalan pa amb tomàquet and the Italian bruschetta or panzanella. The dish is similar to the Catalan pa amb tomàquet and the Italian bruschetta or panzanella.'
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>




</ScrollView>