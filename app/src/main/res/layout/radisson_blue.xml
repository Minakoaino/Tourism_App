<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".radisson_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:src="@drawable/radissonblue"
            android:layout_gravity="center_horizontal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/call_icon_image"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:maxHeight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/phone_call" />

            <ImageView
                android:id="@+id/web_search_image"
                 android:layout_width="135dp"
                 android:layout_height="50dp"
                 android:layout_toRightOf="@+id/call_icon_image"
                 android:src="@drawable/web_search"
                 android:scaleType="centerInside"
                 android:adjustViewBounds="true"
                 android:paddingTop="10dp"/>

            <ImageView
                android:id="@+id/google_map_search_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/map_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:text="Radisson Blu Beach Resort"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textColor="#000"
                android:text="Set on the edge of the Aegean Sea, Radisson Blu Beach Resort in Milatos is the ideal setting for your summer vacation. Surrounded by turquoise waters and idyllic beaches, our hotel in Crete offers multiple accommodation options and premium services in a stylish seafront environment. Indulge in an award-winning world of tastes, senses and experiences and explore the best beaches and sights of Crete. Unique historical and cultural sites such as Knossos, Malia, the Minoan Palace and the archaeological complex of Vathipetro, are located ideally away from our hotel to organize the perfect excursion. Acqua Plus Water Park, the largest water park in Crete, is also near our hotel. Numerous villages with rich cultural heritage as well as natural beauties such as the Milatos Cave and the Cretan Aquarium await you to explore them.  "
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>



</ScrollView>